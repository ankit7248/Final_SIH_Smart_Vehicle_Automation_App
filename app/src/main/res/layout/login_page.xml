    <EditText
        android:id="@+id/Email_id"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        style="@style/White_button"
        android:hint="Email Id"
        android:textColorHint="@color/black"
        android:textAlignment="center"
        android:backgroundTint="#F0F6FE"
        android:textSize="15sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/Login_to_continue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="60dp"
        >

    </EditText>

    <EditText
        android:id="@+id/Password1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        style="@style/White_button"
        android:textSize="15sp"
        android:hint="Password"
        android:inputType="numberPassword"
        android:textColorHint="@color/black"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/Email_id"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        >

    </EditText>

    <Button
        android:id="@+id/Login_button_1"
        style="@style/Blue_Button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="Login"
        android:textSize="15sp"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Password1">

    </Button>

    <TextView
        android:id="@+id/Forget_Pass_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget Password?"
        app:layout_constraintTop_toBottomOf="@+id/Login_button_1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        >

    </TextView>

    <TextView
        android:id="@+id/Dont_have"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't Have Account ? Sign Up"
        app:layout_constraintTop_toBottomOf="@+id/Forget_Pass_1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        app:layout_constraintRight_toRightOf="parent"
        >

    </TextView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="36dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="36dp" />

    <ProgressBar
        android:id="@+id/Otp_ProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>